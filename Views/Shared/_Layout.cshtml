        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Botón flotante para abrir el chatbot -->
    <button class="chat-button" onclick="toggleChatbot()">💬</button>

    <!-- Iframe del chatbot -->
    <iframe class="chatbot-iframe"
        src="https://console.dialogflow.com/api-client/demo/embedded/6e3643ff-4be1-4418-8412-7812e444a4e0"
        allow="microphone;" onload="styleChatbotHeader()"></iframe>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                &copy; Copyright© 1995-2024 Samsung. Todos los derechos reservados.
                Samsung Electronics Perú S.A.C RUC: 20300263578
                
            </div>
            <div class="footer-images">
                <img src="~/image/1ero-los-clientes.jpg" alt="Imagen 1" class="footer-image"
                    style="width: 90px; height:56">
                <img src="~/image/libro-de-reclamaciones_1.jpg" alt="Imagen 2" class="footer-image"
                    style="width: 90px; height: 60px;">
                <img src="~/image/qrsamsung_1.jpg" alt="Imagen 3" class="footer-image"
                    style="width: 200px; height: 60px;">
            </div>

        </div>
    </footer>

    <script>
        function toggleChatbot() {
            var iframe = document.querySelector('.chatbot-iframe');
            if (iframe.style.display === 'none' || iframe.style.display === '') {
                iframe.style.display = 'block';
            } else {
                iframe.style.display = 'none';
            }
        }

        function styleChatbotHeader() {
            var iframe = document.querySelector('.chatbot-iframe');
            var iframeDocument = iframe.contentDocument || iframe.contentWindow.document;

            var header = iframeDocument.querySelector('.header-class'); // Cambia '.header-class' a la clase real del encabezado
            if (header) {
                header.style.backgroundColor = '#FF5733'; // Cambia el color aquí
                header.style.color = 'white'; // Si también quieres cambiar el color del texto
            }
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
